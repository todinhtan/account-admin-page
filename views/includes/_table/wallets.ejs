<div class="box box-info">
  <div class="box-header with-border">
    <h3 class="box-title">Child wallets</h3>

    <div class="box-tools pull-right">
      <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
      </button>
      <!-- <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button> -->
    </div>
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <div class="table-responsive">
      <table class="table no-margin data-tbl">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Type</th>
            <th>Status</th>
            <th>Balances</th>
          </tr>
        </thead>
        <tbody>
          <% listWallet.items.forEach(function(wallet, index) { %>
          <tr>
            <td><a href="/wallet/<%= wallet.id %>"><%= wallet.id %></a></td>
            <td><%= wallet.name %></td>
            <td><%= wallet.type %></td>
            <td><%= wallet.status %></td>
            <td>N/A</td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <!-- /.table-responsive -->
  </div>
  <!-- /.box-body -->
  <!-- /.box-body -->
  <div class="box-footer clearfix dataTables_wrapper">
    <div class="row">
      <div class="col-md-6">
        <div class="dataTables_info" role="status" aria-live="polite">
          <form action="/pagesize/update" method="POST" class="form-inline">
            <input type="hidden" value="wallet" name="type">
            <div class="form-group">
              <span style="display: inline-block;">Showing&nbsp;</span>
              <select style="max-width: 65px; margin: 0 auto; display: inline-block;" class="form-control sel-pagesize" name="pagesize">
                <option <%= (pageSize.wallet == 10) ? 'selected' : '' %> value="10">10</option>
                <option <%= (pageSize.wallet == 20) ? 'selected' : '' %> value="20">20</option>
                <option <%= (pageSize.wallet == 30) ? 'selected' : '' %> value="30">30</option>
                <option <%= (pageSize.wallet == 40) ? 'selected' : '' %> value="40">40</option>
                <option <%= (pageSize.wallet == 50) ? 'selected' : '' %> value="50">50</option>
              </select>
              <span style="display: inline-block;">&nbsp;entries per page</span>
            </div>
          </form>
        </div>
      </div>
      <% if (listWallet.totalPage > 1) { %>
      <div class="col-md-6">
        <div class="dataTables_paginate paging_simple_numbers">
          <ul class="pagination">
            <% for (let i = 1; i <= listWallet.totalPage; i++) { %>
            <li class="paginate_button ajax_paginate <%= (i === 1) ? 'active' : '' %>">
              <a href="/account/<%= currentAccount.id %>/wallets/ajax?page=<%= i %>" data-dt-idx="<%= i %>" tabindex="<%= i - 1 %>"><%= i %></a>
            </li>
            <% } %>
          </ul>
        </div>
      </div>
      <% } %>
    </div>
  </div>
  <div class="overlay" style="display: none;">
    <i class="fa fa-refresh fa-spin"></i>
  </div>
</div>