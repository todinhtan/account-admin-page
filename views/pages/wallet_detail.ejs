<% var page_title = 'EPIAPI Admin | Wallet | ' + currentWallet.name; %>
<!DOCTYPE html>
<html>
<head>
  <% include ../partials/head %>
</head>
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">
  <% include ../partials/header %>
  <% include ../partials/left-sidebar %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Wallet: <%= currentWallet.name %>
        <a href="#" data-toggle="modal" data-target="#modal-default" class="btn btn-sm btn-info btn-flat">Change status</a>
      </h1>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
      <% if (locals.messages && locals.messages.length) { %>
      <% locals.messages.forEach(function(msg, index) { %>
      <div class="callout callout-success">
        <p><%= msg %></p>
      </div>
      <% }) %>
      <% } %>
      <div class="row">
        <div class="col-md-6">
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">Details</h3>

              <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                </button>
                <!-- <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button> -->
              </div>
            </div>
            <div class="box-body">
              <div class="table-responsive">
                <table class="table no-margin">
                  <tbody>
                    <tr>
                      <td>Wallet ID</td>
                      <td><%= currentWallet.id %></td>
                    </tr>
                    <tr>
                      <td>Name</td>
                      <td><%= currentWallet.name %></td>
                    </tr>
                    <tr>
                      <td>Owner</td>
                      <td><a href="/account/<%= currentWallet.owner.split(':')[1] %>"><%= currentWallet.owner %></a></td>
                    </tr>
                    <tr>
                      <td>Created date</td>
                      <td><%= new Date(currentWallet.createdAt).toLocaleDateString({}, { year: 'numeric', month: 'long', day: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric' }) %></td>
                    </tr>
                    <tr>
                      <td>Type</td>
                      <td><%= currentWallet.type %></td>
                    </tr>
                    <tr>
                      <td>Status</td>
                      <td><%= currentWallet.status %></td>
                    </tr>
                    <tr>
                      <td>Callback URL</td>
                      <td><%= currentWallet.callbackUrl %></td>
                    </tr>
                    <tr>
                      <td>Balances</td>
                      <td>N/A</td>
                    </tr>
                    <tr>
                      <td>Note</td>
                      <td>
                        <form method="POST" action="/wallet/<%= currentWallet.id %>">
                          <div class="form-group">
                            <textarea class="form-control" name="notes" rows="5"><%= currentWallet.notes %></textarea>
                          </div>
                          <div class="form-group">
                            <button type="submit" class="btn btn-primary">Save note</button>
                          </div>
                        </form>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">VBA data</h3>

              <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                </button>
                <!-- <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button> -->
              </div>
            </div>
            <div class="box-body">
              <pre><%= JSON.stringify(currentWallet.vbaData, undefined, 2) %></pre>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">VBA verification data</h3>

              <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                </button>
                <!-- <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button> -->
              </div>
            </div>
            <div class="box-body">
              <pre><%= JSON.stringify(currentWallet.vbaVerificationData, undefined, 2) %></pre>
            </div>
          </div>
        </div>
        <% if (listTransfer.items.length > 0) { %>
        <div class="col-md-12">
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">Transfer history</h3>

              <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                </button>
                <!-- <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button> -->
              </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <div class="table-responsive">
                <table id="transfer_list" class="table no-margin">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Created at</th>
                      <th>Closed at</th>
                      <th>Source</th>
                      <th>Destination</th>
                      <th>Status</th>
                      <th>Source amount</th>
                      <th>Source currency</th>
                      <th>Destination amount</th>
                      <th>Destination currency</th>
                      <th>Message</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% listTransfer.items.forEach(function(transfer, index) { %>
                    <tr>
                      <td><%= transfer.id %></td>
                      <td><%= (new Date(transfer.createdAt).toLocaleDateString({}, { year: 'numeric', month: 'long', day: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric' })) %></td>
                      <td><%= (new Date(transfer.closedAt).toLocaleDateString({}, { year: 'numeric', month: 'long', day: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric' })) %></td>
                      <td><a href="<%= friendlyNames[transfer.source].url %>"><%= friendlyNames[transfer.source].name %></a></td>
                      <td><a href="<%= friendlyNames[transfer.dest].url %>"><%= friendlyNames[transfer.dest].name %></a></td>
                      <td><%= transfer.status %></td>
                      <td><%= transfer.sourceAmount %></td>
                      <td><%= transfer.sourceCurrency %></td>
                      <td><%= transfer.destAmount %></td>
                      <td><%= transfer.destCurrency %></td>
                      <td><%= transfer.message %></td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
              <!-- /.table-responsive -->
            </div>
            <!-- /.box-body -->
            <div class="box-footer clearfix">
              <div class="row">
                <div class="col-md-12">
                  <a target="_blank" href="/wallet/<%= currentWallet.id %>/transfers/download" class="btn btn-sm btn-info btn-flat pull-left btn-download">Download transfers</a>
                </div>
                <% if (listTransfer.totalPage > 1) { %>
                <div class="col-md-12 pull-left">
                  <div style="text-align: center;" class="dataTables_paginate paging_simple_numbers" id="account_list_paginate">
                    <ul class="pagination">
                      <% for (let i = 1; i <= listTransfer.totalPage; i++) { %>
                      <li class="paginate_button ajax_paginate <%= (i === 1) ? 'active' : '' %>">
                        <a href="/transfers/wallet:<%= currentWallet.id %>/ajax?page=<%= i %>" data-dt-idx="<%= i %>" tabindex="<%= i - 1 %>"><%= i %></a>
                      </li>
                      <% } %>
                    </ul>
                  </div>
                </div>
                <% } %>
              </div>
            </div>
            <div class="overlay" style="display: none;">
              <i class="fa fa-refresh fa-spin"></i>
            </div>
          </div>
        </div>
        <% } %>
        <% if (listTransaction.items.length > 0) { %>
        <div class="col-md-12">
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">Transaction history</h3>

              <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                </button>
                <!-- <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button> -->
              </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <div class="table-responsive">
                <table class="table no-margin data-tbl">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Created at</th>
                      <th>Confirmed at</th>
                      <th>Cancelled at</th>
                      <th>Reversed at</th>
                      <th>Source</th>
                      <th>Destination</th>
                      <th>Status</th>
                      <th>Type</th>
                      <th>Amount</th>
                      <th>Currency</th>
                      <th>Fees</th>
                      <th>Delta</th>
                      <th>Updated balance</th>
                      <th>Message</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% listTransaction.items.forEach(function(trans, index) { %>
                    <tr>
                      <td><%= trans.id %></td>
                      <td><%= (trans.createdAt !== null) ? (new Date(trans.createdAt).toLocaleDateString({}, { year: 'numeric', month: 'long', day: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric' })) : 'N/A' %></td>
                      <td><%= (trans.confirmedAt !== null) ? (new Date(trans.confirmedAt).toLocaleDateString({}, { year: 'numeric', month: 'long', day: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric' })) : 'N/A' %></td>
                      <td><%= (trans.cancelledAt !== null) ? (new Date(trans.cancelledAt).toLocaleDateString({}, { year: 'numeric', month: 'long', day: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric' })) : 'N/A' %></td>
                      <td><%= (trans.reversedAt !== null) ? (new Date(trans.reversedAt).toLocaleDateString({}, { year: 'numeric', month: 'long', day: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric' })) : 'N/A' %></td>
                      <td><a href="<%= friendlyNames[trans.source].url %>"><%= friendlyNames[trans.source].name %></a></td>
                      <td><a href="<%= friendlyNames[trans.dest].url %>"><%= friendlyNames[trans.dest].name %></a></td>
                      <td><%= trans.status %></td>
                      <td><%= trans.type %></td>
                      <td><%= trans.amount %></td>
                      <td><%= trans.currency %></td>
                      <td><%= trans.fees %></td>
                      <td><%= trans.delta %></td>
                      <td><%= trans.updatedBalance %></td>
                      <td><%= trans.message %></td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
              <!-- /.table-responsive -->
            </div>
            <!-- /.box-body -->
            <div class="box-footer clearfix">
              <div class="row">
                <div class="col-md-12">
                  <a target="_blank" href="/wallet/<%= currentWallet.id %>/transactions/download" class="btn btn-sm btn-info btn-flat pull-left btn-download">Download transfers</a>
                </div>
                <% if (listTransaction.totalPage > 1) { %>
                <div class="col-md-12 pull-left">
                  <div style="text-align: center;" class="dataTables_paginate paging_simple_numbers" id="account_list_paginate">
                    <ul class="pagination">
                      <% for (let i = 1; i <= listTransaction.totalPage; i++) { %>
                      <li class="paginate_button ajax_paginate <%= (i === 1) ? 'active' : '' %>">
                        <a href="/transactions/wallet:<%= currentWallet.id %>/ajax?page=<%= i %>" data-dt-idx="<%= i %>" tabindex="<%= i - 1 %>"><%= i %></a>
                      </li>
                      <% } %>
                    </ul>
                  </div>
                </div>
                <% } %>
              </div>
            </div>
            <div class="overlay" style="display: none;">
              <i class="fa fa-refresh fa-spin"></i>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </section>
    <!-- /.content -->
    <div class="modal fade" id="modal-default">
      <div class="modal-dialog">
        <div class="modal-content">
          <form action="/wallet/<%= currentWallet.id %>/status" method="POST">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title">Change status</h4>
            </div>
            <div class="modal-body">
              <div class="row">
                <div class="col-md-6 col-sm-12">
                  <select class="form-control" name="status" required>
                    <option value="">Select status</option>
                    <option value="NEED_ATTENTION">NEED_ATTENTION</option>
                    <option value="APPROVED">APPROVED</option>
                    <option value="REJECTED">REJECTED</option>
                    <option value="DISABLED">DISABLED</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
        <!-- /.modal-content -->
      </div>
      <!-- /.modal-dialog -->
    </div>
  </div>
  <!-- /.content-wrapper -->

  <% include ../partials/footer %>
</div>
<!-- ./wrapper -->

<% include ../partials/foot %>

<!-- Optionally, you can add Slimscroll and FastClick plugins.
     Both of these plugins are recommended to enhance the
     user experience. -->
</body>
</html>