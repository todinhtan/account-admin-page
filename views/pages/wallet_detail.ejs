<% var page_title = 'EPIAPI Admin | Wallet | ' + currentWallet.name; %>
<!DOCTYPE html>
<html>
<head>
  <% include ../partials/head %>
</head>
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">
  <% include ../partials/header %>
  <% include ../partials/left-sidebar %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Wallet: <%= currentWallet.name %>
        <a href="#" data-toggle="modal" data-target="#modal-default" class="btn btn-sm btn-info btn-flat">Change status</a>
        <% if (authorizeDoc) { %>
          <a href="#" disabled class="btn btn-sm btn-info btn-flat">Authorization doc has been created</a>
        <% } else { %>
          <a href="#" data-toggle="modal" data-target="#authorizeDoc-modal" class="btn btn-sm btn-info btn-flat">Create authorization docs</a>
        <% } %>
      </h1>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
      <% include ../partials/message-container %>
      <div class="row" style="margin-bottom: 15px;">
        <div class="col-md-6 col-sm-12" style="margin-bottom: 15px;">
          <% include ../includes/_form/search-transaction %>
        </div>
        <div class="col-md-6 col-sm-12" style="margin-bottom: 15px;">
          <% include ../includes/_form/search-transfer %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">Details</h3>

              <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                </button>
                <!-- <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button> -->
              </div>
            </div>
            <div class="box-body">
              <div class="table-responsive">
                <table class="table no-margin">
                  <tbody>
                    <tr>
                      <td>Wallet ID</td>
                      <td><%= currentWallet.id %></td>
                    </tr>
                    <tr>
                      <td>Name</td>
                      <td><%= currentWallet.name %></td>
                    </tr>
                    <tr>
                      <td>Owner</td>
                      <td><a href="/account/<%= currentWallet.owner.split(':')[1] %>"><%= currentWallet.owner %></a></td>
                    </tr>
                    <tr>
                      <td>Created date</td>
                      <td><%= moment(currentWallet.createdAt).format('LLLL') %></td>
                    </tr>
                    <tr>
                      <td>Type</td>
                      <td><%= currentWallet.type %></td>
                    </tr>
                    <tr>
                      <td>Status</td>
                      <td><%= currentWallet.status %></td>
                    </tr>
                    <tr>
                      <td>Callback URL</td>
                      <td><%= currentWallet.callbackUrl %></td>
                    </tr>
                    <tr>
                      <td>Balances</td>
                      <td>N/A</td>
                    </tr>
                    <tr>
                      <td>Note</td>
                      <td>
                        <form method="POST" action="/wallet/<%= currentWallet.id %>">
                          <div class="form-group">
                            <textarea class="form-control" name="notes" rows="5"><%= currentWallet.notes %></textarea>
                          </div>
                          <div class="form-group">
                            <button type="submit" class="btn btn-primary">Save note</button>
                          </div>
                        </form>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        <% if (balances.length > 0) { %>
        <div class="col-md-6">
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">Balances</h3>

              <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                </button>
                <!-- <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button> -->
              </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <div class="table-responsive">
                <table class="table no-margin">
                  <thead>
                    <tr>
                      <th>Currency</th>
                      <th>Balance</th>
                      <th>Total balance</th>
                      <th>Available balance</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% balances.forEach(function(lg, index) { %>
                    <tr>
                      <td><%= lg.currency %></td>
                      <td><%= lg.balances %></td>
                      <td><%= lg.totalBalances %></td>
                      <td><%= lg.availableBalances %></td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
              <!-- /.table-responsive -->
            </div>
            <!-- /.box-body -->
          </div>
        </div>
        <% } %>
        <% if (synapseUser && synapseUser.documents && synapseUser.documents.length) { %>
        <div class="col-md-6">
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">Documents</h3>

              <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                </button>
              </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <div class="row">
                <% synapseUser.documents.forEach(function(doc, index) { %>
                <div class="col-md-12">
                  <a class="open-synapse-doc-modal" href="#" data-toggle="modal" data-target="#synapseDoc-modal" data-walletid="<%= synapseUser.walletId %>" data-userid="<%= synapseUser.userId %>" data-document="<%= JSON.stringify(doc) %>">
                    <%= doc.email.endsWith('epiapi.com') || doc.email.endsWith('sendwyre.com') ? 'Company document' : 'Individual document' %>
                  </a><br>
                  <%
                    const docTypes = doc.physical_docs.map(physDoc => physDoc.document_type);
                    let docTypeCount = {};
                    for (let dt of docTypes) {
                      docTypeCount[dt] = 1 + (docTypeCount[dt] || 0);
                    }
                  %>
                  <% for (let key in docTypeCount) { %>
                    <%= key %>: <%= docTypeCount[key] %><br>
                  <% } %>
                </div>
                <% }) %>
              </div>
            </div>
            <!-- /.box-body -->
          </div>
        </div>
        <% } %>
        <% if (currentWallet.vbaData) { %>
        <div class="col-md-6">
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">VBA data</h3>

              <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                </button>
                <!-- <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button> -->
              </div>
            </div>
            <div class="box-body">
              <pre><%= JSON.stringify(currentWallet.vbaData, undefined, 2) %></pre>
              <a href="#" data-toggle="modal" data-target="#vbaData-modal" class="btn btn-sm btn-warning btn-flat">Edit</a>
              <% if (synapseUser && synapseUser.userId) { %>
                <% if (isDeactivatedNode) { %>
                  <a href="#" disabled class="btn btn-sm btn-warning btn-flat">Already deactivated node</a>
                <% } else { %>
                  <a href="/synapse/user/<%= synapseUser.userId %>/deactiveNode" class="btn btn-sm btn-warning btn-flat">Deactivate node</a>
                <% } %>
                <% if (isLockedUser) { %>
                  <a href="#" disabled class="btn btn-sm btn-warning btn-flat">Already locked user</a>
                <% } else { %>
                  <a href="/synapse/user/<%= synapseUser.userId %>/lockUser" class="btn btn-sm btn-warning btn-flat">Lock user</a>
                <% } %>
              <% } %>
            </div>
          </div>
        </div>
        <% } %>
        <div class="col-md-6">
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">VBA verification data</h3>

              <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                </button>
                <!-- <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button> -->
              </div>
            </div>
            <div class="box-body">
              <pre><%= JSON.stringify(vba, undefined, 2) %></pre>
              <a href="#" data-toggle="modal" data-target="#verification-modal" class="btn btn-sm btn-warning btn-flat">Edit</a>
            </div>
          </div>
        </div>
        <% if (listTransfer.items.length > 0) { %>
        <div class="col-md-12">
          <%- include('../includes/_table/transfers', {
            listTransfer: listTransfer,
            downloadLink: '/wallet/' + currentWallet.id + '/transfers/download',
            srn: 'wallet:' + currentWallet.id
          }) %>
        </div>
        <% } %>
        <% if (listTransaction.items.length > 0) { %>
        <div class="col-md-12">
          <%- include('../includes/_table/transactions', {
            listTransaction: listTransaction,
            downloadLink: '/wallet/' + currentWallet.id + '/transactions/download',
            srn: 'wallet:' + currentWallet.id
          }) %>
        </div>
        <% } %>
      </div>
    </section>
    <!-- /.content -->
    <div class="modal fade" id="modal-default">
      <div class="modal-dialog">
        <div class="modal-content">
          <form action="/wallet/<%= currentWallet.id %>/status" method="POST">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title">Change status</h4>
            </div>
            <div class="modal-body">
              <div class="row">
                <div class="col-md-6 col-sm-12">
                  <select class="form-control" name="status" required>
                    <option value="">Select status</option>
                    <option value="NEED_ATTENTION">NEED_ATTENTION</option>
                    <option value="APPROVED">APPROVED</option>
                    <option value="REJECTED">REJECTED</option>
                    <option value="DISABLED">DISABLED</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
        <!-- /.modal-content -->
      </div>
      <!-- /.modal-dialog -->
    </div>
    <% if (vba) { %>
    <div class="modal fade" id="verification-modal">
      <div class="modal-dialog">
        <div class="modal-content">
          <form action="/wallet/<%= currentWallet.id %>/verification/update" method="POST">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title">Edit VBA verification</h4>
            </div>
            <div class="modal-body">
              <div class="row">
                <% Object.keys(vba).forEach(function(key, index) { %>
                  <% if (!['countries', 'address', 'repAddress', 'merchantIds', '__v', '_id', 'created_time', 'updated_time', 'sessionId'].includes(key)) { %>
                  <div class="form-group col-md-6 col-sm-12">
                    <label for="veri<%= index %>"><%=key%></label>
                    <input <%= key == 'status' ? 'readonly' : 'name='+key %> type="text" id="veri<%= index %>" class="form-control" value="<%= vba[key] %>">
                  </div>
                  <% } %>
                <% }) %>
                <div class="form-group col-md-6 col-sm-12">
                  <label for="countries">countries</label>
                  <input type="text" id="countries" name="countries" class="tag-editor form-control" value="<%= vba.countries ? vba.countries.join(',') : '' %>">
                </div>
              </div>
              <h4>Address</h4>
              <div class="row">
                <div class="form-group col-md-6 col-sm-12">
                  <label for="street1">street1</label>
                  <input type="text" required id="street1" name="address[street1]" class="form-control" value="<%= vba.address && vba.address.street1 ? vba.address.street1 : '' %>">
                </div>
                <div class="form-group col-md-6 col-sm-12">
                  <label for="street2">street2</label>
                  <input type="text" id="street2" name="address[street2]" class="form-control" value="<%= vba.address && vba.address.street2 ? vba.address.street2 : '' %>">
                </div>
                <div class="form-group col-md-6 col-sm-12">
                  <label for="city">city</label>
                  <input type="text" required id="city" name="address[city]" class="form-control" value="<%= vba.address && vba.address.city ? vba.address.city : '' %>">
                </div>
                <div class="form-group col-md-6 col-sm-12">
                  <label for="state">state</label>
                  <input type="text" required id="state" name="address[state]" class="form-control" value="<%= vba.address && vba.address.state ? vba.address.state : '' %>">
                </div>
                <div class="form-group col-md-6 col-sm-12">
                  <label for="postalCode">postalCode</label>
                  <input type="text" required id="postalCode" name="address[postalCode]" class="form-control" value="<%= vba.address && vba.address.postalCode ? vba.address.postalCode : '' %>">
                </div>
                <div class="form-group col-md-6 col-sm-12">
                  <label for="country">country</label>
                  <input type="text" required id="country" name="address[country]" class="form-control" value="<%= vba.address && vba.address.country ? vba.address.country : '' %>">
                </div>
              </div>
              <h4>Rep address</h4>
              <div class="row">
                <div class="form-group col-md-6 col-sm-12">
                  <label for="rep-street1">street1</label>
                  <input type="text" id="rep-street1" name="repAddress[street1]" class="form-control" value="<%= vba.repAddress && vba.repAddress.street1 ? vba.repAddress.street1 : '' %>">
                </div>
                <div class="form-group col-md-6 col-sm-12">
                  <label for="rep-street2">street2</label>
                  <input type="text" id="rep-street2" name="repAddress[street2]" class="form-control" value="<%= vba.repAddress && vba.repAddress.street2 ? vba.repAddress.street2 : '' %>">
                </div>
                <div class="form-group col-md-6 col-sm-12">
                  <label for="rep-city">city</label>
                  <input type="text" id="rep-city" name="repAddress[city]" class="form-control" value="<%= vba.repAddress && vba.repAddress.city ? vba.repAddress.city : '' %>">
                </div>
                <div class="form-group col-md-6 col-sm-12">
                  <label for="rep-state">state</label>
                  <input type="text" id="rep-state" name="repAddress[state]" class="form-control" value="<%= vba.repAddress && vba.repAddress.state ? vba.repAddress.state : '' %>">
                </div>
                <div class="form-group col-md-6 col-sm-12">
                  <label for="rep-postalCode">postalCode</label>
                  <input type="text" id="rep-postalCode" name="repAddress[postalCode]" class="form-control" value="<%= vba.repAddress && vba.repAddress.postalCode ? vba.repAddress.postalCode : '' %>">
                </div>
                <div class="form-group col-md-6 col-sm-12">
                  <label for="rep-country">country</label>
                  <input type="text" id="rep-country" name="repAddress[country]" class="form-control" value="<%= vba.repAddress && vba.repAddress.country ? vba.repAddress.country : '' %>">
                </div>
              </div>
              <h4>Merchant IDs</h4>
              <div class="merchant-list">
                <% if (vba.merchantIds != null) { %>
                  <% vba.merchantIds.forEach(function(id, index) { %>
                    <div class="row">
                      <div class="form-group col-md-4 col-sm-12">
                        <input type="text" readonly class="form-control" value="<%= id.merchantId %>" placeholder="Merchant ID">
                      </div>
                      <div class="form-group col-md-4 col-sm-12">
                        <input type="text" readonly class="form-control" value="<%= id.merchantIdType %>" placeholder="Merchant ID Type">
                      </div>
                      <div class="form-group col-md-4 col-sm-12">
                        <input type="text" readonly class="form-control" value="<%= id.merchantIdCountry %>" placeholder="Merchant ID Country">
                      </div>
                    </div>
                  <% }) %>
                <% } %>
              </div>
              <a href="#" class="btn btn-sm btn-primary btn-flat add-merchant">Add merchant</a>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
        <!-- /.modal-content -->
      </div>
      <!-- /.modal-dialog -->
    </div>
    <% } %>
    <div class="modal fade" id="vbaData-modal">
      <div class="modal-dialog">
        <div class="modal-content">
          <form action="/wallet/<%= currentWallet.id %>/vbaData/update" method="POST">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title">Edit VBA Data</h4>
            </div>
            <div class="modal-body">
              <div class="row">
                <div class="form-group col-md-12">
                  <label for="vba_country">Country</label>
                  <input type="text" required id="vba_country" name="country" class="form-control" placeholder="Enter a country: AUS, US, CN, ...">
                </div>
                <div class="form-group col-md-12">
                  <label for="vba_data">VBA data</label>
                  <textarea id="vba_data" required class="form-control" name="vbaData" rows="5"></textarea>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
        <!-- /.modal-content -->
      </div>
      <!-- /.modal-dialog -->
    </div>
    <div class="modal fade" id="authorizeDoc-modal">
      <div class="modal-dialog">
        <div class="modal-content">
          <form action="/wallet/<%= currentWallet.id %>/authorizeDoc" method="POST">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title">Authorization docs</h4>
            </div>
            <div class="modal-body">
              <div class="row">
                <h4 style="text-align: center;">Id document</h4>
                <img id="id_doc_img" style="max-width: 300px; display: block; margin: 0 auto;" src="<%= document.idDoc ? document.idDoc : 'https://via.placeholder.com/300x225' %>" alt="">
              </div>
              <hr>
              <div class="row">
                <input type="hidden" name="idDoc" value="<%= document.idDoc ? document.idDoc : '' %>">
                <div class="form-group col-md-12">
                  <label for="fullName">Full Name</label>
                  <input type="text" required id="fullName" name="fullName" class="form-control" value="<%= vba ? pinyin(vba.nameEn || vba.nameCn, { style: pinyin.STYLE_NORMAL }).join(' ') : '' %>">
                </div>
                <div class="form-group col-md-12">
                  <label for="sex">Sex</label>
                  <input type="text" id="sex" name="sex" class="form-control" value="<%= vba ? vba.entityType : '' %>">
                </div>
                <div class="form-group col-md-12">
                  <label for="ethnicity">Ethnicity</label>
                  <input type="text" id="ethnicity" name="ethnicity" class="form-control" value="">
                </div>
                <div class="form-group col-md-12">
                  <label for="citizenIdNumber">Citizen ID Number</label>
                  <input type="text" id="citizenIdNumber" name="citizenIdNumber" class="form-control" value="<%= vba ? vba.idNumber : '' %>">
                </div>
                <div class="form-group col-md-12">
                  <label for="dob">Date of birth</label>
                  <input type="text" id="dob" name="dobString" class="form-control" value="<%= vba ? moment(vba.dateOfBirth).format('MM/DD/YYYY') : '' %>">
                  <small>Format MM/DD/YYYY</small>
                </div>
              </div>
              <h4>Address</h4>
              <div class="row">
                <div class="form-group col-md-6 col-sm-12">
                  <label for="street1">Street1</label>
                  <input type="text" id="street1" name="address[street1]" class="form-control" value="<%= vba && vba.address ? pinyin(vba.address.street1, { style: pinyin.STYLE_NORMAL }).join(' ') : '' %>">
                </div>
                <div class="form-group col-md-6 col-sm-12">
                  <label for="street2">Street2</label>
                  <input type="text" id="street2" name="address[street2]" class="form-control" value="<%= vba && vba.address ? pinyin(vba.address.street2, { style: pinyin.STYLE_NORMAL }).join(' ') : '' %>">
                </div>
                <div class="form-group col-md-6 col-sm-12">
                  <label for="city">City</label>
                  <input type="text" id="city" name="address[city]" class="form-control" value="<%= vba && vba.address ? pinyin(vba.address.city, { style: pinyin.STYLE_NORMAL }).join(' ') : '' %>">
                </div>
                <div class="form-group col-md-6 col-sm-12">
                  <label for="state">State</label>
                  <input type="text" id="state" name="address[state]" class="form-control" value="<%= vba && vba.address ? pinyin(vba.address.state, { style: pinyin.STYLE_NORMAL }).join(' ') : '' %>">
                </div>
                <div class="form-group col-md-6 col-sm-12">
                  <label for="postalCode">Postal Code</label>
                  <input type="text" id="postalCode" name="address[postalCode]" class="form-control" value="<%= vba && vba.address ? vba.address.postalCode : '' %>">
                </div>
                <div class="form-group col-md-6 col-sm-12">
                  <label for="country">Country</label>
                  <input type="text" id="country" name="address[country]" class="form-control" value="<%= vba && vba.address ? pinyin(vba.address.country, { style: pinyin.STYLE_NORMAL }).join(' ') : '' %>">
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
        <!-- /.modal-content -->
      </div>
      <!-- /.modal-dialog -->
    </div>
    <div class="modal fade" id="synapseDoc-modal">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Base document</h4>
          </div>
          <div class="modal-body">
            <div class="row">
              <h4 style="text-align: center;">Basic document information</h4>
              <div class="base_doc">
                <form action="/docType/create" method="POST">
                  <input type="hidden" name="walletId" value="">
                  <input type="hidden" name="userId" value="">
                  <input type="hidden" name="docType" value="">
                  <input type="hidden" name="baseDocId" value="">
                  <div class="modal-body">
                    <div class="row">
                      <div class="form-group col-md-6 col-sm-12">
                        <label for="name">name</label>
                        <input type="text" class="form-control" name="userData[name]" value="">
                      </div>
                      <div class="form-group col-md-6 col-sm-12">
                        <label for="alias">alias</label>
                        <input type="text" class="form-control" name="userData[alias]" value="">
                      </div>
                      <div class="form-group col-md-6 col-sm-12">
                        <label for="email">email</label>
