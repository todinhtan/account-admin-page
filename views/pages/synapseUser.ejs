  <script>
  $('.content').on('click', '.open-walletId-modal', function(e) {
    var walletId = $(this).text();
    var targetId = $(this).data('target');
    var _modal = $(targetId);
    $.ajax({
      url: '/wallet/' + walletId + '/vba/ajax',
      type: 'GET',
      success: function(data) {
        _modal.find('#id_doc_img').attr('src', data.idDocUri);
        _modal.find('.vba-data pre').html(JSON.stringify(data, undefined, 2));
      },
      error: function(error) {
        console.log(error);
      }
    })
  });

  $('.content').on('click', '.open-userId-modal', function(e) {
    var userId = $(this).text();
    var targetId = $(this).data('target');
    var _modal = $(targetId);
    $.ajax({
      url: '/synapse/user/' + userId,
      type: 'GET',
      success: function(data) {
        if (data.documents && data.documents.length) {
          _modal.find('.physical_docs pre').html(JSON.stringify(data.documents[0].physical_docs, undefined, 2));
          _modal.find('.social_docs pre').html(JSON.stringify(data.documents[0].social_docs, undefined, 2));
        }
      },
      error: function(error) {
        console.log(error);
      }
    })
  })

  $(document).on('submit', '.form-doc-type', function(e) {
    var _self = $(this);
    var _docType = _self.find('[name=docType]').val();
    if (_docType === 'authorization') {
      var _modal = $('#authorizeDoc-modal');
      var _walletId = _self.find('[name=walletId]').val();
      var _userId = _self.find('[name=userId]').val();
      _modal.find('[name=walletId]').val(_walletId);
      _modal.find('[name=userId]').val(_userId);
      if (_self.find('[name=baseDocId]').length) {
        _modal.find('[name=baseDocId]').val(_self.find('[name=baseDocId]').val());
      }
