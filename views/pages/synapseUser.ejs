  $('.content').on('click', '.open-synapse-doc-modal', function(e) {
    var _document = $(this).data('document');
    var targetId = $(this).data('target');
    var _walletId = $(this).data('walletid');
    var _userId = $(this).data('userid');
    var _modal = $(targetId);
    var isCompany = _document.email.endsWith('epiapi.com') || _document.email.endsWith('sendwyre.com');
    _modal.find('.modal-title').text((isCompany ? 'Company document: ' : 'Individual document: ') + _document.id);

    _modal.find('[name=walletId]').val(_walletId);
    _modal.find('[name=userId]').val(_userId);
    _modal.find('input[name=docType]').val(isCompany ? 'company_basic': 'basic');
    _modal.find('[name=baseDocId]').val(_document.id);

    _modal.find('[name="userData[email]"]').val(_document.email);
    _modal.find('[name="userData[phone_number]"]').val(_document.phone_number);
    _modal.find('[name="userData[ip]"]').val(_document.ip);
    _modal.find('[name="userData[address_street]"]').val(_document.address_street);
    _modal.find('[name="userData[address_city]"]').val(_document.address_city);
    _modal.find('[name="userData[address_subdivision]"]').val(_document.address_subdivision);
    _modal.find('[name="userData[address_postal_code]"]').val(_document.address_postal_code);
    _modal.find('[name="userData[address_country_code]"]').val(_document.address_country_code);
    _modal.find('[name="userData[day]"]').val(_document.day);
    _modal.find('[name="userData[month]"]').val(_document.month);
    _modal.find('[name="userData[year]"]').val(_document.year);

    _modal.find('.base_doc pre').text();

    // add physical docs panel
    _modal.find('.physical_docs').html('');
    if (_document.physical_docs && _document.physical_docs.length) {
      var pdocTpl = $('.physical-doc-tpl').html();
      _document.physical_docs.forEach(function(pdoc, index) {
        var content = pdocTpl.replace('%p_doc_id%', pdoc.id)
            .replace('%p_doc_type%', pdoc.document_type)
            .replace('%p_doc_status%', pdoc.status)
            .replace('%p_doc_image%', pdoc.document_value)
            .replace('%wallet_id%', _walletId)
            .replace('%user_id%', _userId)
            .replace('%base_doc_id%', _document.id)
            .replace('%sub_doc_id%', pdoc.id);
        if (pdoc.document_value.endsWith('.pdf')) {
          content = content.split('%p_doc_pdf%').join(pdoc.document_value);
          content = content.replace('class="pdoc" style="display: none;"', 'class="pdoc" style="display: block;"');
        }
        _modal.find('.physical_docs').append(content);
      });
    }
  })
