<% var page_title = 'EPIAPI Admin | Unauthorized VBA'; %>
<!DOCTYPE html>
<html>
<head>
  <% include ../partials/head %>
</head>
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">
  <% include ../partials/header %>
  <% include ../partials/left-sidebar %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>VBA status updates
        <small>Total <%= listSynapseUsers.total %> results</small>
      </h1>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
      <% include ../partials/message-container %>
      <div class="row">
        <% if (listSynapseUsers.items.length > 0) { %>
        <div class="col-md-12">
          <%- include('../includes/_table/synapseUser', { listSynapseUsers: listSynapseUsers, useDataTablePaging: true }) %>
        </div>
        <% } %>
      </div>
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <div class="modal fade" id="walletId-modal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">VBA verification data & Id document</h4>
        </div>
        <div class="modal-body">
          <div class="row">
            <img id="id_doc_img" style="max-width: 300px; display: block; margin: 0 auto;" src="https://via.placeholder.com/300x225" alt="">
          </div>
          <hr>
          <div class="row">
            <h4 style="text-align: center;">VBA verification data</h4>
            <div class="vba-data">
              <pre></pre>
            </div>
          </div>
        </div>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>

  <div class="modal fade" id="userId-modal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">Synapse user documents</h4>
        </div>
        <div class="modal-body">
          <div class="row">
            <h4 style="text-align: center;">physical_docs</h4>
            <div class="physical_docs">
              <pre></pre>
            </div>
          </div>
          <hr>
          <div class="row">
            <h4 style="text-align: center;">social_docs</h4>
            <div class="social_docs">
              <pre></pre>
            </div>
          </div>
        </div>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>

  <div class="modal fade" id="authorizeDoc-modal">
    <div class="modal-dialog">
      <div class="modal-content">
        <form action="/docType/create" method="POST">
          <input type="hidden" name="walletId" value="">
          <input type="hidden" name="userId" value="">
          <input type="hidden" name="docType" value="authorization">
          <input type="hidden" name="authorizationData[adminAccountId]" value="<%= account.id ? account.id : '' %>">
          <input type="hidden" name="authorizationData[adminAccountName]" value="<%= account.profile ? account.profile.name : '' %>">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Authorization docs</h4>
          </div>
          <div class="modal-body">
            <div class="row">
              <h4 style="text-align: center;">Id document</h4>
              <img id="id_doc_img" style="max-width: 300px; display: block; margin: 0 auto;" src="https://via.placeholder.com/300x225" alt="">
            </div>
            <hr>
            <div class="row">
              <input type="hidden" name="authorizationData[idDoc]" value="">
              <div class="form-group col-md-12">
                <label for="fullName">Full Name</label>
                <input type="text" required id="fullName" name="authorizationData[fullName]" class="form-control" value="">
              </div>
              <div class="form-group col-md-12">
                <label for="sex">Sex</label>
                <input type="text" id="sex" name="authorizationData[sex]" class="form-control" value="">
              </div>
              <div class="form-group col-md-12">
                <label for="ethnicity">Ethnicity</label>
                <input type="text" id="ethnicity" name="authorizationData[ethnicity]" class="form-control" value="">
              </div>
              <div class="form-group col-md-12">
                <label for="citizenIdNumber">Citizen ID Number</label>
                <input type="text" id="citizenIdNumber" name="authorizationData[citizenIdNumber]" class="form-control" value="">
              </div>
              <div class="form-group col-md-12">
                <label for="dob">Date of birth</label>
                <input type="text" id="dob" name="authorizationData[dobString]" class="form-control" value="">
                <small>Format MM/DD/YYYY</small>
              </div>
            </div>
            <h4>Address</h4>
            <div class="row">
              <div class="form-group col-md-6 col-sm-12">
                <label for="street1">Street1</label>
                <input type="text" id="street1" name="authorizationData[address][street1]" class="form-control" value="">
              </div>
              <div class="form-group col-md-6 col-sm-12">
                <label for="street2">Street2</label>
                <input type="text" id="street2" name="authorizationData[address][street2]" class="form-control" value="">
              </div>
              <div class="form-group col-md-6 col-sm-12">
                <label for="city">City</label>
                <input type="text" id="city" name="authorizationData[address][city]" class="form-control" value="">
              </div>
              <div class="form-group col-md-6 col-sm-12">
                <label for="state">State</label>
                <input type="text" id="state" name="authorizationData[address][state]" class="form-control" value="">
              </div>
              <div class="form-group col-md-6 col-sm-12">
                <label for="postalCode">Postal Code</label>
                <input type="text" id="postalCode" name="authorizationData[address][postalCode]" class="form-control" value="">
              </div>
              <div class="form-group col-md-6 col-sm-12">
                <label for="country">Country</label>
                <input type="text" id="country" name="authorizationData[address][country]" class="form-control" value="">
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>

  <% include ../partials/footer %>
</div>
<!-- ./wrapper -->

<% include ../partials/foot %>
<!-- Optionally, you can add Slimscroll and FastClick plugins.
     Both of these plugins are recommended to enhance the
     user experience. -->
  <script>
  $('.content').on('click', '.open-walletId-modal', function(e) {
    var walletId = $(this).text();
    var targetId = $(this).data('target');
    var _modal = $(targetId);
    $.ajax({
      url: '/wallet/' + walletId + '/vba/ajax',
      type: 'GET',
      success: function(data) {
        _modal.find('#id_doc_img').attr('src', data.idDocUri);
        _modal.find('.vba-data pre').html(JSON.stringify(data, undefined, 2));
      },
      error: function(error) {
        console.log(error);
      }
    })
  });

  $('.content').on('click', '.open-userId-modal', function(e) {
    var userId = $(this).text();
    var targetId = $(this).data('target');
    var _modal = $(targetId);
    $.ajax({
      url: '/synapse/user/' + userId,
      type: 'GET',
      success: function(data) {
        if (data.documents && data.documents.length) {
          _modal.find('.physical_docs pre').html(JSON.stringify(data.documents[0].physical_docs, undefined, 2));
          _modal.find('.social_docs pre').html(JSON.stringify(data.documents[0].social_docs, undefined, 2));
        }
      },
      error: function(error) {
        console.log(error);
      }
    })
  })

  $('.content').on('submit', '.form-doc-type', function(e) {
    var _self = $(this);
    var _docType = _self.find('[name=docType]').val();
    if (_docType === 'authorization') {
      var _modal = $('#authorizeDoc-modal');
      var _walletId = _self.find('[name=walletId]').val();
      var _userId = _self.find('[name=userId]').val();
      _modal.find('[name=walletId]').val(_walletId);
      _modal.find('[name=userId]').val(_userId);
      $.ajax({
        url: '/vba/wallet/' + _walletId + '/pinyin',
        type: 'GET',
        success: function(data) {
          console.log(data.address.street1);
          _modal.find('#id_doc_img').attr('src', data.idDocUri);
          _modal.find('[name="authorizationData[idDoc]"]').val(data.idDocUri);

          // fill data
          _modal.find('[name="authorizationData[fullName]"]').val(data.nameEn || data.nameCn);
          _modal.find('[name="authorizationData[sex]"]').val(data.entityType);
          _modal.find('[name="authorizationData[ethnicity]"]').val('');
          _modal.find('[name="authorizationData[citizenIdNumber]"]').val(data.idNumber);
          _modal.find('[name="authorizationData[dobString]"]').val(data.dobString);
          _modal.find('[name="authorizationData[address][street1]"]').val(data.address.street1);
          _modal.find('[name="authorizationData[address][street2]"]').val(data.address.street2);
          _modal.find('[name="authorizationData[address][city]"]').val(data.address.city);
          _modal.find('[name="authorizationData[address][state]"]').val(data.address.state);
          _modal.find('[name="authorizationData[address][postalCode]"]').val(data.address.postalCode);
          _modal.find('[name="authorizationData[address][country]"]').val(data.address.country);

          _modal.modal('show');
        },
        error: function(error) {
          console.log(error);
        },
      })
      return false;
    }
  });
  </script>
</body>
</html>