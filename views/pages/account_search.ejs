<% var page_title = 'EPIAPI Admin | Search: ' + keyword; %>
<!DOCTYPE html>
<html>
<head>
  <% include ../partials/head %>
</head>
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">
  <% include ../partials/header %>
  <% include ../partials/left-sidebar %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>Search account: <%= keyword %>
        <small>Total <%= listAccount.total %> results</small>
      </h1>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
      <% include ../partials/message-container %>
      <div class="row" style="margin-bottom: 15px;">
        <div class="col-md-4 col-sm-12">
          <form action="/accounts/search">
            <div class="input-group">
              <input type="text" class="form-control" required name="q" placeholder="Search accounts by identities..." value="<%= keyword %>">
              <span class="input-group-btn">
                <button type="submit" class="btn btn-default" type="button">
                  <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                </button>
              </span>
            </div><!-- /input-group -->
          </form>
        </div>
      </div>
      <div class="row">
        <% if (listAccount.items.length > 0) { %>
        <div class="col-md-12">
          <%- include('../includes/_table/accounts', { listAccount: listAccount, useDataTablePaging: false }) %>
        </div>
        <% } %>
      </div>
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <% include ../partials/footer %>
</div>
<!-- ./wrapper -->

<% include ../partials/foot %>

<!-- Optionally, you can add Slimscroll and FastClick plugins.
     Both of these plugins are recommended to enhance the
     user experience. -->
<script>
  $('#account_list').DataTable({
    'paging'      : true,
    'lengthChange': false,
    'searching'   : false,
    'ordering'    : true,
    'info'        : true,
    'autoWidth'   : false,
    'pageLength'  : <%= locals.pageSize.account %>,
  })
</script>
</body>
</html>